// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  STAFF
  STUDENT
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
}

enum EventCategory {
  TECHNOLOGY
  BUSINESS
  WORKSHOP
  SEMINAR
  NETWORKING
  CAREER
  SOCIAL
  SPORTS
  OTHER
}

enum RegistrationStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum CheckInMethod {
  QR_CODE
  MANUAL
}

enum NotificationType {
  REGISTRATION_CONFIRMED
  EVENT_REMINDER
  EVENT_UPDATED
  EVENT_CANCELLED
  CHECK_IN_SUCCESS
  ANNOUNCEMENT
}

enum AnnouncementPriority {
  LOW
  NORMAL
  HIGH
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  name          String
  role          UserRole       @default(STUDENT)
  studentId     String?        @unique
  departmentId  String?
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  emailVerified DateTime?
  otp           String?
  otpExpires    DateTime?
  
  department        Department?    @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  registrations     Registration[]
  checkins          CheckIn[]
  assignedEvents    EventStaff[]       @relation("StaffAssignments")
  performedCheckIns CheckIn[]          @relation("StaffCheckIns")
  notifications     Notification[]
  feedback          EventFeedback[]
  auditLogs         AuditLog[]
  
  @@index([email])
  @@index([role])
  @@index([departmentId])
}

model Speaker {
  id           String   @id @default(cuid())
  name         String
  bio          String?  @db.Text
  title        String?
  organization String?
  photoUrl     String?
  email        String?
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  events       Event[]
  
  @@index([name])
}

model Venue {
  id         String   @id @default(cuid())
  name       String
  address    String
  capacity   Int
  facilities String[]
  imageUrl   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  events     Event[]
  
  @@index([name])
}

model Event {
  id          String        @id @default(cuid())
  title       String
  description String        @db.Text
  category    EventCategory @default(OTHER)
  startDate   DateTime
  endDate     DateTime
  capacity    Int
  imageUrl    String?
  status      EventStatus   @default(DRAFT)
  speakerId   String?
  venueId     String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  speaker       Speaker?        @relation(fields: [speakerId], references: [id], onDelete: SetNull)
  venue         Venue?          @relation(fields: [venueId], references: [id], onDelete: SetNull)
  registrations Registration[]
  checkins      CheckIn[]
  assignedStaff EventStaff[]
  feedback      EventFeedback[]
  report        EventReport?
  announcements Announcement[]
  auditLogs     AuditLog[]
  
  @@index([category])
  @@index([status])
  @@index([startDate])
  @@index([endDate])
}

model Registration {
  id           String             @id @default(cuid())
  userId       String
  eventId      String
  status       RegistrationStatus @default(CONFIRMED)
  qrCode       String             @unique
  registeredAt DateTime           @default(now())
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
  @@index([status])
}

model CheckIn {
  id                 String         @id @default(cuid())
  userId             String
  eventId            String
  method             CheckInMethod  @default(QR_CODE)
  checkedInAt        DateTime       @default(now())
  checkedInByStaffId String?
  
  user             User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event            Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  checkedInByStaff User? @relation("StaffCheckIns", fields: [checkedInByStaffId], references: [id], onDelete: SetNull)
  
  @@unique([userId, eventId])
  @@index([eventId])
  @@index([checkedInAt])
  @@index([checkedInByStaffId])
}

model EventStaff {
  id        String   @id @default(cuid())
  eventId   String
  staffId   String
  createdAt DateTime @default(now())
  
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  staff User  @relation("StaffAssignments", fields: [staffId], references: [id], onDelete: Cascade)
  
  @@unique([eventId, staffId])
  @@index([eventId])
  @@index([staffId])
}

model Department {
  id          String   @id @default(cuid())
  name        String   @unique
  code        String   @unique
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users User[]
  
  @@index([code])
}

model Notification {
  id        String             @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String             @db.Text
  isRead    Boolean            @default(false)
  sentAt    DateTime           @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([isRead])
  @@index([sentAt])
}

model EventFeedback {
  id          String   @id @default(cuid())
  userId      String
  eventId     String
  rating      Int
  comment     String?  @db.Text
  submittedAt DateTime @default(now())
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  @@unique([userId, eventId])
  @@index([eventId])
  @@index([rating])
}

model EventReport {
  id                  String   @id @default(cuid())
  eventId             String   @unique
  totalRegistrations  Int      @default(0)
  totalCheckIns       Int      @default(0)
  attendanceRate      Float?
  averageRating       Float?
  generatedAt         DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  @@index([eventId])
}

model Announcement {
  id          String               @id @default(cuid())
  eventId     String
  title       String
  content     String               @db.Text
  priority    AnnouncementPriority @default(NORMAL)
  publishedAt DateTime             @default(now())
  
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  @@index([eventId])
  @@index([priority])
  @@index([publishedAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  eventId    String?
  action     String
  entityType String
  entityId   String?
  details    Json?
  ipAddress  String?
  createdAt  DateTime @default(now())
  
  user  User?  @relation(fields: [userId], references: [id], onDelete: SetNull)
  event Event? @relation(fields: [eventId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([eventId])
  @@index([action])
  @@index([entityType])
  @@index([createdAt])
}

